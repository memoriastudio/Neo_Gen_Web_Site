<section
  class="py-24 border-t border-border-dark relative overflow-hidden bg-background-dark"
>
  <div
    class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-primary/5 blur-[100px] rounded-full pointer-events-none"
  >
  </div>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <h2 class="text-3xl font-black mb-6 sm:text-4xl text-white">
          Have questions about our <span class="text-primary"
            >enterprise solutions?</span
          >
        </h2>
        <p class="text-gray-400 text-lg mb-8 leading-relaxed">
          Our team is here to help you find the perfect plan for your trading
          needs. Send us a message and we'll get back to you within 24 hours.
        </p>
        <div class="space-y-6">
          <div class="flex items-center gap-4">
            <div
              class="flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary notranslate"
              translate="no"
            >
              <span class="material-symbols-outlined">mail</span>
            </div>
            <div>
              <p class="text-sm text-gray-500">Email us at</p>
              <p class="font-bold text-white">support@fintechpro.com</p>
            </div>
          </div>
          <div class="flex items-center gap-4">
            <div
              class="flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary notranslate"
              translate="no"
            >
              <span class="material-symbols-outlined">chat</span>
            </div>
            <div>
              <p class="text-sm text-gray-500">Live Chat</p>
              <p class="font-bold text-white">Average response: 5 mins</p>
            </div>
          </div>
        </div>
      </div>
      <div class="glass-card p-8 sm:p-10">
        <form action="#" class="space-y-6">
          <div class="space-y-2">
            <label class="text-sm font-semibold text-gray-300" for="full-name"
              >Full Name</label
            >
            <input
              class="form-input"
              id="full-name"
              placeholder="John Doe"
              type="text"
            />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-semibold text-gray-300" for="email"
              >Email Address</label
            >
            <input
              class="form-input"
              id="email"
              placeholder="john@company.com"
              type="email"
            />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-semibold text-gray-300" for="message"
              >Message</label
            >
            <textarea
              class="form-input min-h-[120px] resize-none"
              id="message"
              placeholder="How can we help you?"></textarea>
          </div>
          <button
            class="w-full py-4 rounded-xl bg-primary text-white font-bold hover:bg-primary-hover shadow-lg shadow-primary/20 transition-all transform hover:scale-[1.01] active:scale-95 flex items-center justify-center gap-2 group"
          >
            <span>Send Message</span>
            <span
              class="material-symbols-outlined text-xl transition-transform group-hover:translate-x-1 notranslate"
              translate="no">send</span
            >
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
