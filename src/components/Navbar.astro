<header
  class="sticky top-0 z-50 w-full border-b border-gray-200 dark:border-border-dark bg-white/80 dark:bg-background-dark/80 backdrop-blur-md"
>
  <div
    class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8"
  >
    <div class="flex items-center gap-2">
      <div
        class="flex h-8 w-8 items-center justify-center rounded text-white flex-shrink-0 notranslate"
        translate="no"
      >
        <img src="/logo-light.png" alt="Logo Memoria Studio" />
      </div>
      <span
        class="text-lg font-bold tracking-tight text-slate-900 dark:text-white"
        >NeoGen</span
      >
    </div>
    <div class="flex items-center gap-2 sm:gap-4">
      <a
        href="/"
        class="hidden md:flex items-center gap-1.5 text-sm font-medium text-slate-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition-colors"
      >
        <span class="material-symbols-outlined text-[20px]">home</span>
        Home
      </a>
      <a
        href="#contact"
        class="hidden md:flex h-9 items-center justify-center gap-1.5 rounded-lg bg-primary px-3 sm:px-4 text-xs sm:text-sm font-bold text-white shadow transition-colors hover:bg-primary-hover focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring"
      >
        <span class="material-symbols-outlined text-[18px]">bolt</span>
        Contact
      </a>

      <button
        id="mobile-menu-toggle"
        class="md:hidden flex h-9 w-9 items-center justify-center rounded-lg border border-gray-200 dark:border-border-dark text-slate-600 dark:text-gray-300 notranslate"
        translate="no"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <span
          class="material-symbols-outlined text-[24px]"
          id="menu-toggle-icon">menu</span
        >
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="hidden md:hidden absolute top-16 left-0 w-full border-b border-gray-200 dark:border-border-dark bg-white dark:bg-background-dark px-4 py-6 space-y-4 shadow-2xl z-50"
  >
    <nav class="flex flex-col gap-3">
      <a
        class="flex items-center gap-2 px-4 py-3 rounded-lg text-base font-semibold text-slate-900 dark:text-white hover:bg-gray-50 dark:hover:bg-white/5 transition-colors"
        href="/"
      >
        <span class="material-symbols-outlined text-primary">home</span>
        Home
      </a>
      <a
        class="flex items-center gap-2 px-4 py-3 rounded-lg bg-primary text-base font-bold text-white shadow-lg shadow-primary/25"
        href="#apply"
      >
        <span class="material-symbols-outlined">bolt</span>
        Apply
      </a>
    </nav>
  </div>
</header>

<script>
  const toggleBtn = document.getElementById("mobile-menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const toggleIcon = document.getElementById("menu-toggle-icon");

  toggleBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    const isExpanded = toggleBtn.getAttribute("aria-expanded") === "true";

    toggleBtn.setAttribute("aria-expanded", (!isExpanded).toString());

    mobileMenu?.classList.toggle("hidden");

    if (toggleIcon) {
      toggleIcon.textContent = isExpanded ? "menu" : "close";
    }

    if (!isExpanded) {
      toggleBtn.classList.add("bg-gray-100", "dark:bg-border-dark");
    } else {
      toggleBtn.classList.remove("bg-gray-100", "dark:bg-border-dark");
    }
  });

  const mobileLinks = mobileMenu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      if (toggleIcon) toggleIcon.textContent = "menu";
      toggleBtn?.setAttribute("aria-expanded", "false");
      toggleBtn?.classList.remove("bg-gray-100", "dark:bg-border-dark");
    });
  });

  document.addEventListener("click", (e) => {
    if (mobileMenu && !mobileMenu.classList.contains("hidden")) {
      const target = e.target as HTMLElement;
      if (!mobileMenu.contains(target) && !toggleBtn?.contains(target)) {
        mobileMenu.classList.add("hidden");
        if (toggleIcon) toggleIcon.textContent = "menu";
        toggleBtn?.setAttribute("aria-expanded", "false");
        toggleBtn?.classList.remove("bg-gray-100", "dark:bg-border-dark");
      }
    }
  });
</script>
